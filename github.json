{
    "packageRules": [
        {
            "description": "Auto merge GitHub Actions updates",
            "matchManagers": [
                "github-actions"
            ],
            "matchDatasources": [
                "github-tags"
            ],
            "automerge": true,
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ]
        },
        {
            "description": "Auto merge Github official actions releases",
            "matchManagers": [
                "github-actions"
            ],
            "matchPackagePatterns": [
                "actions/checkout.*",
                "actions/setup-python.*"

            ],
            "automerge": true
        }
    ]
}